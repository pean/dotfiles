[alias]
  s = status -uall -s
  ap = add -p
  c = commit -v
  ca = commit --amend
  cf = commit --fixup
  ; cleanup = !branch -v | rg \\[gone\\] | awk '{print $1}' | xargs -I{} git branch -D {}
  ; cleanupdry = !git branch -v | rg \\[gone\\] | awk '{print $1}'
  cm = commit -m
  co = checkout
  d = diff
  l = log --oneline -15
  logp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ri = rebase --interactive --autostash --autosquash
  pf = push --force-with-lease

[core]
  editor=nvim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
[rebase]
  autosquash = true

