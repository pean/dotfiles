[alias]
  s = status -uall -s
  ap = add -p
  c = commit -v
  ca = commit --amend
  cf = commit --fixup
  cleanup =     "!git fetch --all -p -q; git branch -vv | grep ': gone]' | awk '{ print $1 }' | xargs -n 1 git branch -D"
  cleanupdry =  "!git fetch --all -p -q; git branch -vv | grep ': gone]' | awk '{ print $1 }'"

  cm = commit -m
  co = checkout
  d = diff
  ; l = log -15 --pretty=format:'%Cblue%>(14)%cr%Creset %C(yellow)%h%Creset%C(auto)%d%Creset %s'
  ; l = log -15 --pretty=format:'%C(blue)%>(14)%cr%Creset %C(yellow)%h%Creset %C(yellow)%an%Creset%C(auto)%d%Creset %s'
  l = log -10 --pretty=format:'%C(blue)%>(14)%cr%Creset %C(yellow)%h%Creset %C(auto)%d%Creset %s %C(cyan)(%aN)%Creset'
  logp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ri = rebase --interactive --autostash --autosquash
  pf = push --force-with-lease

[core]
  editor=nvim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

[diff]
  algorithm = histogram
  colorMoved = true
  renames = true
  mnemonicPrefix = true

[merge]
  conflictStyle = zdiff3

[rerere]
  enabled = true

[rebase]
  autosquash = true

