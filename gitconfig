[user]
  name = Peter Andersson
  path = ~/.gitconfig-signingkey

[alias]
  s = status -uall -s
  ap = add -p
  c = commit -v
  ca = commit --amend
  cf = commit --fixup
  cleanup = branch --merged | rg -v master | xargs git branch -d
  cm = commit -m
  co = checkout
  d = diff
  l = log --oneline -15
  logp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ri = rebase --interactive
  pf = push --force-with-lease

[core]
  editor=nvim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
[rebase]
  autosquash = true

[includeIf "gitdir:~/src/wa/"]
  path = .gitconfig-wa
[includeIf "gitdir:~/.dotfiles/"]
  path = .gitconfig-wa
[includeIf "gitdir:~/src/snowfall/"]
  path = .gitconfig-snowfall
[includeIf "gitdir:~/src/hemnet/"]
  path = .gitconfig-hemnet

[commit]
  gpgsign = true
